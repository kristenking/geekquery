<h1>Admin Dashboard</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.access_locked? ? 'Banned' : 'Active' %></td>
        <td>
          <% unless user.access_locked? %>
            <%= button_to 'Ban', admin_ban_user_path(user), method: :post %>
          <% else %>
            <%= button_to 'Unban', admin_unban_user_path(user), method: :post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>